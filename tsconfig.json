{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@ui/*": ["src/ui/*"],
      "@theme/*": ["src/ui/theme/*"],
      "@components/*": ["src/ui/components/*"],
      "@pages": ["src/ui/pages/index"],
      "@pages/*": ["src/ui/pages/*"],
      "@contexts": ["src/ui/contexts/index"],
      "@contexts/*": ["src/ui/contexts/*"],
      "@widgets/": ["src/ui/components/widgets/index"],
      "@widgets/*": ["src/ui/components/widgets/*"],
      "@providers": ["src/ui/providers/index"],
      "@ui/utils": ["src/ui/utils/index"],
      "@schemas/*": ["src/schemas/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "src",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "./vite.config.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
