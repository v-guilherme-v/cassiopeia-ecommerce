{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "coverageDirectory": "<rootDir>/docs/coverage",
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "transform": {
    "^.+\\.(js|jsx)?$": "babel-jest",
    "^.+\\.{tsx}?$": [
      "ts-jest",
      { "isolatedModules": true }
    ]
  },
  "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^@components/(.*)$": "<rootDir>/src/ui/components/$1",
    "^@theme/(.*)$": "<rootDir>/src/ui/theme/$1",
    "^@providers": "<rootDir>/src/ui/providers/index",
    "^@widgets/(.*)": "<rootDir>/src/ui/components/widgets/$1",
    "^@schemas/(.*)": "<rootDir>/src/schemas/$1",
    "^@contexts$": "<rootDir>/src/ui/contexts/index",
    "^@ui/utils$": "<rootDir>/src/ui/utils/index",
    "^@utils/(.*)$": "<rootDir>/src/utils/$1",
    "^swiper": "<rootDir>/src/__mocks__/swiper.js",
    "\\.svg$": "<rootDir>/src/__mocks__/svg.js",
    "\\.(jpg|png)": "<rootDir>/src/__mocks__/img.js"
  },
  "testPathIgnorePatterns": [
    "/node_modules/",
    "<rootDir>/jest.setup.js"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json"
  ],
  "collectCoverageFrom": [
    "src/**/*.{js,jsx,ts,tsx}",
    "!src/**/*.d.ts",
    "!**/*.test.{js,jsx,ts,tsx}"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/src/ui/pages",
    "/src/ui/providers",
    "/src/ui/theme",
    "/docs",
    "main.tsx",
    "root.*.tsx",
    "index\\.ts$"
  ]
}